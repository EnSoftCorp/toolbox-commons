<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <!-- create an initializer extension to initialize preferences -->
   <extension
      point="org.eclipse.equinox.preferences.preferences">
	   <initializer
	         class="com.ensoftcorp.open.commons.preferences.CommonsPreferences">
	   </initializer>
	</extension>
   
   <!-- create a preferences menu item for toolbox commons -->
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.ensoftcorp.open.commons.ui.CommonsPreferencesPage"
            id="com.ensoftcorp.open.commons.ui.preferences"
            name="Toolbox Commons">
      </page>
   </extension>
   
   <!-- defines the handler actions -->
   <extension
	      point="org.eclipse.ui.handlers">
	   <handler
	         commandId="com.ensoftcorp.open.commons.menus.editCommonsPreferencesCommand"
	         class="com.ensoftcorp.open.commons.handlers.CommonsPreferencesHandler">
	   </handler>
	</extension>

	<!-- defines an Atlas Toolbox menu category -->
	<extension
	      point="org.eclipse.ui.menus">
	   <menuContribution
	         locationURI="menu:org.eclipse.ui.main.menu?after=additions">
	      <menu
	            label="Atlas Toolbox"
	            id="com.ensoftcorp.open.commons.menus.toolbox">
	      </menu>
	   </menuContribution>
	</extension>
	
	<!-- extend the Atlas Toolbox menu with a new submenu for commons analysis -->
	<extension
	      point="org.eclipse.ui.menus">
	   <menuContribution
	         locationURI="menu:com.ensoftcorp.open.commons.menus.toolbox?after=additions">
	      <menu
	            label="Toolbox Commons"
	            id="com.ensoftcorp.open.immutability.menus.commonsMenu">
	         <command
	               commandId="com.ensoftcorp.open.commons.menus.editCommonsPreferencesCommand"
	               label="Edit Preferences"
	               id="com.ensoftcorp.open.commons.menus.editCommonsPreferencesCommandMenuItem">
	         </command>
	      </menu>
	   </menuContribution>
	</extension>
	
	<!-- defines an Atlas Toolbox view category -->
	<extension
         point="org.eclipse.ui.views">
      <category
            name="Atlas Toolbox"
            id="com.ensoftcorp.open.commons.views.categories.toolbox">
      </category>
   </extension>
   
   <!-- defines and extension point schema for contributing subsystem definitons -->
   <extension-point 
   		id="com.ensoftcorp.open.commons.subsystem" 
   		name="Subsystem" 
   		schema="schema/com.ensoftcorp.open.commons.subsystem.exsd"/>
	
   
    <!-- adds a post code map hook for running subsystem tagging -->
   <extension
         point="com.ensoftcorp.atlas.core.ToolboxExtensionPoint">
      <indexer
            class="com.ensoftcorp.open.commons.subsystems.Subsystems">
      </indexer>
   </extension>

</plugin>
