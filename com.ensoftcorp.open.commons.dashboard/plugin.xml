<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<!-- define command some handler extensions -->
    <extension
	      point="org.eclipse.ui.handlers">
	   <handler
	         commandId="com.ensoftcorp.open.commons.dashboard.menus.openDashboardViewCommand"
	         class="com.ensoftcorp.open.commons.dashboard.handlers.OpenDashboardViewHandler">
	   </handler>
	</extension>

	<!-- extend the Atlas Toolbox menu with a new submenu for Dashboard -->
	<extension
	      point="org.eclipse.ui.menus">
	   <menuContribution
	         locationURI="menu:com.ensoftcorp.open.commons.menus.toolbox?after=additions">
	      <menu
	            label="Dashboard"
	            id="com.ensoftcorp.open.commons.dashboard.menus.DashboardMenu">
	         <command
	               label="Open Dashboard"
	               commandId="com.ensoftcorp.open.commons.dashboard.menus.openDashboardViewCommand"
	               id="com.ensoftcorp.open.commons.dashboard.menus.openDashboardViewCommandMenuItem">
	         </command>
	      </menu>
	   </menuContribution>
	</extension>

	<!-- extension for Dashboard view -->
	<extension
         point="org.eclipse.ui.views">
      <view
            category="com.ensoftcorp.open.commons.views.categories.toolbox"
            class="com.ensoftcorp.open.commons.dashboard.ui.DashboardView"
            icon="icons/dashboard.gif"
            id="com.ensoftcorp.open.commons.dashboard.ui.DashboardView"
            name="Dashboard">
      </view>
   </extension>
   
</plugin>
